---
const siteTitle = "Lenscape";
const socialLinks = [
  { name: "Instagram", link: "https://instagram.com" },
  { name: "Twitter", link: "https://twitter.com" },
];
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{siteTitle}</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
</head>
<body class="bg-gray-100 text-gray-900">
<header class="fixed w-full bg-white shadow-md p-4">
    <nav class="container mx-auto flex justify-between items-center">
        <a href="/" class="text-2xl font-semibold">{siteTitle}</a>
        <ul class="hidden md:flex space-x-6">
            <li><a href="/" class="hover:text-gray-600">Home</a></li>
            <li><a href="/gallery" class="hover:text-gray-600">Gallery</a></li>
            <li><a href="/src/pages/about" class="hover:text-gray-600">About</a></li>
        </ul>
    </nav>
</header>

<main class="pt-20"><slot/></main>

<footer class="text-center py-6 mt-10 bg-gray-800 text-white">
    <p>&copy; 2025 {siteTitle}. All Rights Reserved.</p>
    <div class="flex justify-center space-x-4 mt-2">
      {socialLinks.map((item) => (
              <a href={item.link} target="_blank" class="hover:underline">{item.name}</a>
      ))}
    </div>
</footer>
</body>
</html>
